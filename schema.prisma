// This file is automatically generated by Keystone, do not modify it manually.
// Modify your Keystone config when you want to change this.

datasource mysql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "mysql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(uuid())
  name     String @default("")
  email    String @unique @default("")
  password String
  posts    Post[] @relation("Post_author")
}

model LandingPage {
  id                   String  @id @default(uuid())
  headerLogo_filesize  Int?
  headerLogo_extension String?
  headerLogo_width     Int?
  headerLogo_height    Int?
  headerLogo_id        String?
  visi                 String  @default("")
  misi                 String  @default("")
  about                Json    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  portofolio           Json    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Apply {
  id           String  @id @default(uuid())
  name         String  @default("")
  telpon       String  @default("")
  email        String  @default("")
  university   String  @default("")
  programStudy String  @default("")
  cv_filesize  Int?
  cv_filename  String?
}

model Post {
  id          String    @id @default(uuid())
  title       String    @default("")
  status      String?   @default("draft")
  content     Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate DateTime?
  author      User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId    String?   @map("author")
  tags        Tag[]     @relation("Post_tags")

  @@index([authorId])
}

model Career {
  id           String    @id @default(uuid())
  title        String    @default("")
  description  Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  Requirements Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  created_at   DateTime?
}

model Product {
  id               String  @id @default(uuid())
  gambar_filesize  Int?
  gambar_extension String?
  gambar_width     Int?
  gambar_height    Int?
  gambar_id        String?
  name             String  @default("")
  description      String  @default("")
}

model Contact {
  id    String @id @default(uuid())
  name  String @default("") @mysql.VarChar(20)
  value String @default("") @mysql.VarChar(288)
}

model Tag {
  id    String @id @default(uuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}